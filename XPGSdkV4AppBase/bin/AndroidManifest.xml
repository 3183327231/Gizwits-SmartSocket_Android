<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xpg.appbase"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.xpg.appbase.XpgApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.FlushActivity" />
        <activity android:name=".activity.BaseActivity" />
        <activity
            android:name=".activity.account.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.account.RegisterActivity" />
        <activity android:name=".activity.account.ChangePswActivity" />
        <activity android:name=".activity.account.ForgetPswActivity" />
        <activity android:name=".activity.account.UserManageActivity" />

        <activity android:name=".activity.device.DeviceListActivity" />
        <activity android:name=".activity.device.DeviceManageListActivity" />
        <activity android:name=".activity.device.DeviceManageDetailActivity" />

        <activity android:name=".activity.onboarding.AirlinkActivity" />
        <activity android:name=".activity.onboarding.AutoConfigActivity" />
        <activity android:name=".activity.onboarding.BindingDeviceActivity" />
        <activity android:name=".activity.onboarding.ConfigFailedActivity" />
        <activity android:name=".activity.onboarding.GetPassAndBind" />
        <activity android:name=".activity.onboarding.SearchDeviceActivity" />
        <activity android:name=".activity.onboarding.SoftApConfigActivity" />

        <activity android:name=".activity.help.AboutActivity" />
        <activity android:name=".activity.help.HelpActivity" />


        <activity android:name="com.xpg.zxing.CaptureActivity" />
        <activity android:name=".activity.slipbar.SlipBarActivity" />

        <activity android:name=".activity.control.MainControlActivity" >
        </activity>
